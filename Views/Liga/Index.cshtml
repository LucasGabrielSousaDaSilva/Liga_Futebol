@model IEnumerable<Liga_Futebol.Models.Liga>

@{
    ViewBag.Title = "Ligas";
}

<style>
    .liga-btn {
        background-color: #28a745;
        color: white;
        font-weight: bold;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .liga-btn:hover {
            background-color: #218838;
        }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.875rem;
        border-radius: 3px;
    }

    .text-center {
        text-align: center;
    }

    .text-end {
        text-align: end;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }
</style>


<h2 class="text-center">Ligas</h2>

<div class="text-end mb-3">
    <a href="@Url.Action("Create", "Liga")" class="btn btn-success liga-btn">Criar Nova Liga</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.DataInicio)</th>
            <th>@Html.DisplayNameFor(model => model.DataFim)</th>
            <th>@Html.DisplayNameFor(model => model.Localizacao)</th>
            <th>@Html.DisplayNameFor(model => model.NumeroTimes)</th>
            <th>@Html.DisplayNameFor(model => model.Rodadas)</th>
            <th>@Html.DisplayNameFor(model => model.PartidasPorRodada)</th>
            <th>@Html.DisplayNameFor(model => model.TipoCompeticao)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.DataInicio)</td>
                <td>@Html.DisplayFor(modelItem => item.DataFim)</td>
                <td>@Html.DisplayFor(modelItem => item.Localizacao)</td>
                <td>@Html.DisplayFor(modelItem => item.NumeroTimes)</td>
                <td>@Html.DisplayFor(modelItem => item.Rodadas)</td>
                <td>@Html.DisplayFor(modelItem => item.PartidasPorRodada)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoCompeticao)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a href="@Url.Action("Edit", "Liga", new { id = item.Id })" class="btn btn-primary btn-sm">Editar</a>
                    <a href="@Url.Action("Details", "Liga", new { id = item.Id })" class="btn btn-info btn-sm">Detalhes</a>
                    <a href="@Url.Action("Delete", "Liga", new { id = item.Id })" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>