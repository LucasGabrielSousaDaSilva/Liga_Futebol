@model Liga_Futebol.Models.ComissaoTecnica

@{
    ViewBag.Title = "Excluir Membro da Comissão Técnica";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg rounded-4 p-4" style="min-width: 600px; max-width: 800px; width: 100%;">
        <div class="card-header bg-danger text-white rounded-4 d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i> Confirmar Exclusão</h4>
            <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-light">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="card-body">
            <p class="alert alert-warning"><strong>Tem certeza que deseja excluir este membro da comissão técnica?</strong></p>

            <dl class="row">
                <dt class="col-sm-4">Time</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Time.Nome)</dd>

                <dt class="col-sm-4">Nome</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-4">Data de Nascimento</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DataNascimento)</dd>

                <dt class="col-sm-4">Cargo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Cargo)</dd>
    </dl>

            @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()
                <div class="text-end mt-4">
                    <input type="submit" value="Excluir" class="btn btn-danger px-4 me-2" />
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancelar</a>
        </div>
    }
</div>
    </div>
</div>
