@model Liga_Futebol.Models.ComissaoTecnica

@{
    ViewBag.Title = "Detalhes do Membro da Comissão";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 p-4 bg-light">
        <h2 class="text-center text-success mb-4">👔 Detalhes da Comissão Técnica</h2>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>🏟️ Time:</strong>
                <p class="form-control-plaintext">@Model.Time.Nome</p>
            </div>
            <div class="col-md-6">
                <strong>🧑 Nome:</strong>
                <p class="form-control-plaintext">@Model.Nome</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>📅 Data de Nascimento:</strong>
                <p class="form-control-plaintext">@Model.DataNascimento.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="col-md-6">
                <strong>🎯 Cargo:</strong>
                <p class="form-control-plaintext">@Model.Cargo</p>
            </div>
        </div>

        <div class="mt-4 text-center">
            @Html.ActionLink("✏️ Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning me-2" })
            @Html.ActionLink("⬅️ Voltar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
