@model Liga_Futebol.Models.ComissaoTecnica

@{
    ViewBag.Title = "Editar Comissão Técnica";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg rounded-4 p-4" style="min-width: 700px; max-width: 900px; width: 100%;">
        <div class="card-header bg-primary text-white rounded-4 d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-user-edit me-2"></i> Editar Membro da Comissão Técnica</h4>
            <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-light">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    @Html.LabelFor(model => model.Nome, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.DataNascimento, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Cargo, new { @class = "form-label fw-bold" })
                    @Html.EnumDropDownListFor(model => model.Cargo, htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.Cargo, "", new { @class = "text-danger" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(model => model.TimeId, "Time", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("TimeId", null, "Selecione o time", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.TimeId, "", new { @class = "text-danger" })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="fas fa-save me-1"></i> Salvar
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        Cancelar
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
