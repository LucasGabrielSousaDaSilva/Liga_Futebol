@model Liga_Futebol.Models.EstatisticaPartida

@{
    ViewBag.Title = "Excluir Estatística";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg rounded-4 p-4" style="min-width: 600px; max-width: 800px; width: 100%;">
        <div class="card-header bg-danger text-white rounded-4 d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i> Confirmar Exclusão</h4>
            <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-light">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="card-body">
            <h5 class="text-danger mb-3">Tem certeza que deseja excluir esta estatística?</h5>
            <dl class="row">
                <dt class="col-sm-5">Jogador</dt>
                <dd class="col-sm-7">@Html.DisplayFor(m => m.Jogador.Nome)</dd>

                <dt class="col-sm-5">Local da Partida</dt>
                <dd class="col-sm-7">@Html.DisplayFor(m => m.Partida.Local)</dd>

                <dt class="col-sm-5">Time (ID)</dt>
                <dd class="col-sm-7">@Html.DisplayFor(m => m.TimeId)</dd>

                <dt class="col-sm-5">Gols Marcados</dt>
                <dd class="col-sm-7">@Html.DisplayFor(m => m.GolsMarcados)</dd>

                <dt class="col-sm-5">Gols Sofridos</dt>
                <dd class="col-sm-7">@Html.DisplayFor(m => m.GolsSofridos)</dd>

                <dt class="col-sm-5">Assistências</dt>
                <dd class="col-sm-7">@Html.DisplayFor(m => m.Asistencias)</dd>

                <dt class="col-sm-5">Cartões Amarelos</dt>
                <dd class="col-sm-7">@Html.DisplayFor(m => m.CartoesAmarelos)</dd>

                <dt class="col-sm-5">Cartões Vermelhos</dt>
                <dd class="col-sm-7">@Html.DisplayFor(m => m.CartoesVermelhos)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-end mt-4">
                    <input type="submit" value="Excluir" class="btn btn-danger px-4 me-2" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary px-4">Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>