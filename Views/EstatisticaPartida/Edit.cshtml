@model Liga_Futebol.Models.EstatisticaPartida

@{
    ViewBag.Title = "Editar Estatísticas";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg rounded-4 p-4" style="min-width: 700px; max-width: 900px; width: 100%;">
        <div class="card-header bg-primary text-white rounded-4 d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-pen-alt me-2"></i> Editar Estatísticas da Partida</h4>
            <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-light">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="mb-3">
                    @Html.Label("Partida", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("PartidaId", null, "Selecione a partida", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.PartidaId, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.Label("Jogador", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("JogadorId", null, "Selecione o jogador", new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.JogadorId, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.TimeId, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.TimeId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TimeId, "", new { @class = "text-danger" })
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.GolsMarcados, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.GolsMarcados, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GolsMarcados, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.GolsSofridos, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.GolsSofridos, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GolsSofridos, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Asistencias, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.Asistencias, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Asistencias, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.CartoesAmarelos, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.CartoesAmarelos, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CartoesAmarelos, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-4">
                    @Html.LabelFor(model => model.CartoesVermelhos, new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.CartoesVermelhos, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CartoesVermelhos, "", new { @class = "text-danger" })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="fas fa-save me-1"></i> Salvar
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        Cancelar
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
