@model Liga_Futebol.Models.EstatisticaPartida

@{
    ViewBag.Title = "Detalhes da Estatística";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 p-4 bg-light">
        <h2 class="mb-4 text-primary">📊 Estatísticas do Jogador</h2>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>👤 Jogador:</strong>
                <p class="form-control-plaintext">@Model.Jogador.Nome</p>
            </div>
            <div class="col-md-6">
                <strong>🏟️ Local da Partida:</strong>
                <p class="form-control-plaintext">@Model.Partida.Local</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>🛡️ Time:</strong>
                <p class="form-control-plaintext">@Model.Time.Nome</p>
            </div>
            <div class="col-md-6">
                <strong>⚽ Gols Marcados:</strong>
                <p class="form-control-plaintext">@Model.GolsMarcados</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>🥅 Gols Sofridos:</strong>
                <p class="form-control-plaintext">@Model.GolsSofridos</p>
            </div>
            <div class="col-md-6">
                <strong>🎯 Assistências:</strong>
                <p class="form-control-plaintext">@Model.Asistencias</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>🟨 Cartões Amarelos:</strong>
                <p class="form-control-plaintext">@Model.CartoesAmarelos</p>
            </div>
            <div class="col-md-6">
                <strong>🟥 Cartões Vermelhos:</strong>
                <p class="form-control-plaintext">@Model.CartoesVermelhos</p>
            </div>
        </div>

        <div class="mt-4">
            @Html.ActionLink("✏️ Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning me-2" })
            @Html.ActionLink("⬅️ Voltar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
