@model IEnumerable<Liga_Futebol.Models.Time>

@{
    ViewBag.Title = "Times";
}

<style>
    body {
        background-color: #0b8708;
    }
</style>

<!-- Bootstrap Icons CDN (adicione no seu _Layout.cshtml se ainda não tiver) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2 class="text-dark">Times</h2>
    @Html.ActionLink("Novo Time", "Create", null, new { @class = "btn btn-success" })
</div>

<div class="table-responsive">
    <table class="table table-dark table-striped table-bordered rounded shadow-sm">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                <th>@Html.DisplayNameFor(model => model.First().CorUniformesPrimaria)</th>
                <th>@Html.DisplayNameFor(model => model.First().CorUniformesSecundaria)</th>
                <th>@Html.DisplayNameFor(model => model.First().DataFundacao)</th>
                <th>@Html.DisplayNameFor(model => model.First().Cidade)</th>
                <th>@Html.DisplayNameFor(model => model.First().Estado)</th>
                <th>@Html.DisplayNameFor(model => model.First().EstadioTime)</th>
                <th>@Html.DisplayNameFor(model => model.First().CapacidadeEstagio)</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Status</td>
                    <td>@item.CorUniformesPrimaria</td>
                    <td>@item.CorUniformesSecundaria</td>
                    <td>@item.DataFundacao</td>
                    <td>@item.Cidade</td>
                    <td>@item.Estado</td>
                    <td>@item.EstadioTime</td>
                    <td>@item.CapacidadeEstagio</td>
                    <td class="text-center">
                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning me-1 bi bi-pencil-square", title = "Editar" })
                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info me-1 bi bi-eye-fill", title = "Detalhes" })
                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger bi bi-trash", title = "Excluir" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>