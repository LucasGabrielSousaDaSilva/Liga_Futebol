@model Liga_Futebol.Models.Time

@{
    ViewBag.Title = "Details";
}



<h2>Details</h2>


<p>
    <a href="@Url.Action("Index", "Time")" class="btn btn-primary">Voltar</a>
</p>
<p><strong>Nome:</strong> @Model.Nome</p>
<p><strong>Cidade:</strong> @Model.Cidade</p>
<p><strong>Estado:</strong> @Model.Estado</p>
<p><strong>Ano de Fundação:</strong> @Model.DataFundacao</p>
<p><strong>Estádio:</strong> @Model.EstadioTime (@Model.CapacidadeEstagio pessoas)</p>
<p><strong>Uniforme:</strong> @Model.CorUniformesPrimaria / @Model.CorUniformesSecundaria</p>
<p><strong>Status:</strong> @(Model.Status ? "Apto" : "Não Apto")</p>


<hr />

<h2>Jogadores</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Posição</th>
            <th>Número</th>
            <th>Altura (m)</th>
            <th>Peso (kg)</th>
            <th>Pé Preferido</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jogador in Model.Jogadores)
        {
            <tr>
                <td>@jogador.Nome</td>
                <td>@jogador.Posicao</td>
                <td>@jogador.NumCamisa</td>
                <td>@jogador.Altura</td>
                <td>@jogador.Peso</td>
                <td>@jogador.PePreferido</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h2>Comissão Técnica</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cargo</th>
            <th>Data de Nascimento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var membro in Model.ComissaoTecnica)
        {
            <tr>
                <td>@membro.Nome</td>
                <td>@membro.Cargo</td>
                <td>@membro.DataNascimento.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
