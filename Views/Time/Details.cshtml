@model Liga_Futebol.Models.Time

@{
    ViewBag.Title = "Detalhes do Time";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4 bg-light">
        <h2 class="text-center text-primary mb-4">🏟️ @Model.Nome</h2>

        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>📍 Cidade:</strong> @Model.Cidade - @Model.Estado</p>
                <p><strong>📅 Fundação:</strong> @Model.DataFundacao</p>
                <p><strong>🎽 Uniforme:</strong> @Model.CorUniformesPrimaria / @Model.CorUniformesSecundaria</p>
            </div>
            <div class="col-md-6">
                <p><strong>🏟️ Estádio:</strong> @Model.EstadioTime</p>
                <p><strong>👥 Capacidade:</strong> @Model.CapacidadeEstagio pessoas</p>
                <p><strong>✔️ Status:</strong> @(Model.Status ? "Apto para competição" : "Não Apto")</p>
            </div>
        </div>

        <div class="text-center mb-4">
            <a href="@Url.Action("Index", "Time")" class="btn btn-secondary me-2">⬅️ Voltar</a>
            @Html.ActionLink("✏️ Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
        </div>

        <hr class="my-4" />

        <h3 class="text-dark mb-3">👟 Jogadores</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover rounded shadow-sm bg-white">
                <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Posição</th>
            <th>Número</th>
            <th>Altura (m)</th>
            <th>Peso (kg)</th>
            <th>Pé Preferido</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jogador in Model.Jogadores)
        {
            <tr>
                <td>@jogador.Nome</td>
                <td>@jogador.Posicao</td>
                <td>@jogador.NumCamisa</td>
                <td>@jogador.Altura</td>
                <td>@jogador.Peso</td>
                <td>@jogador.PePreferido</td>
            </tr>
        }
    </tbody>
</table>
        </div>

        <hr class="my-4" />

        <h3 class="text-dark mb-3">🧠 Comissão Técnica</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover rounded shadow-sm bg-white">
                <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Cargo</th>
            <th>Data de Nascimento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var membro in Model.ComissaoTecnica)
        {
            <tr>
                <td>@membro.Nome</td>
                <td>@membro.Cargo</td>
                            <td>@membro.DataNascimento.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
        </div>
    </div>
</div>
