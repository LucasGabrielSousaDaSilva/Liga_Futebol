@model Liga_Futebol.Models.Partida

@{
    ViewBag.Title = "Excluir Partida";
}
<style>
    body {
        background-color: #0b8708; /* fundo geral verde */
    }
</style>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4 bg-light" style="max-width: 600px; width: 100%;">
        <h2 class="text-center text-danger">Excluir Partida</h2>
        <hr />

        <h4 class="text-secondary text-center">Tem certeza de que deseja excluir esta partida?</h4>
        <dl class="row mt-4">
            <dt class="col-sm-4">Time Casa</dt>
            <dd class="col-sm-8">@Model.TimeCasa.Nome</dd>

            <dt class="col-sm-4">Time Fora</dt>
            <dd class="col-sm-8">@Model.TimeFora.Nome</dd>

            <dt class="col-sm-4">Data</dt>
            <dd class="col-sm-8">@Model.Data.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4">Gols Time Casa</dt>
            <dd class="col-sm-8">@Model.GolsTimeCasa</dd>

            <dt class="col-sm-4">Gols Time Fora</dt>
            <dd class="col-sm-8">@Model.GolsTimeFora</dd>

            <dt class="col-sm-4">Local</dt>
            <dd class="col-sm-8">@Model.Local</dd>

            <dt class="col-sm-4">Resultado</dt>
            <dd class="col-sm-8">@Model.Resultado</dd>

            <dt class="col-sm-4">Rodada</dt>
            <dd class="col-sm-8">@Model.Rodada</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="text-center mt-4">
                <input type="submit" value="Excluir" class="btn btn-danger me-2" />
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>