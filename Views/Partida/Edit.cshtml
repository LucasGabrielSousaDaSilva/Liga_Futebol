@model Liga_Futebol.Models.Partida

@{
    ViewBag.Title = "Editar Partida";
}

<style>
    body {
        background-color: #0b8708; /* fundo geral verde */
    }
</style>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4 bg-light" style="max-width: 600px; width: 100%;">
        <h2 class="text-center text-primary mb-4">Editar Partida</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Data, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Time da Casa", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("TimeCasaId", null, "Selecione", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TimeCasaId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Time Visitante", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("TimeForaId", null, "Selecione", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TimeForaId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.GolsTimeCasa, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.GolsTimeCasa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GolsTimeCasa, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.GolsTimeFora, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.GolsTimeFora, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GolsTimeFora, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Local, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Local, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Local, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Resultado, htmlAttributes: new { @class = "form-label" })
                @Html.EnumDropDownListFor(model => model.Resultado, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Resultado, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Rodada, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Rodada, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rodada, "", new { @class = "text-danger" })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary me-2">Salvar</button>
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
