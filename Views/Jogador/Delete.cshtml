@model Liga_Futebol.Models.Jogador

@{
    ViewBag.Title = "Remover Jogador";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4 shadow-lg rounded-4 bg-light" style="min-width: 600px; max-width: 700px; width: 100%;">
        <h2 class="text-center text-danger mb-3">🗑️ Remover Jogador</h2>
        <p class="text-center text-secondary">Tem certeza que deseja excluir o jogador abaixo?</p>
        <hr />

        <dl class="row">
            <dt class="col-sm-4 fw-bold">Time</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Time.Nome)</dd>

            <dt class="col-sm-4 fw-bold">Nome</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-4 fw-bold">Nascimento</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataNascimento)</dd>

            <dt class="col-sm-4 fw-bold">Nacionalidade</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nacionalidade)</dd>

            <dt class="col-sm-4 fw-bold">Posição</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Posicao)</dd>

            <dt class="col-sm-4 fw-bold">Camisa Nº</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NumCamisa)</dd>

            <dt class="col-sm-4 fw-bold">Altura</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Altura)</dd>

            <dt class="col-sm-4 fw-bold">Peso</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Peso)</dd>

            <dt class="col-sm-4 fw-bold">Pé Preferido</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PePreferido)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-between mt-4">
                <input type="submit" value="❌ Confirmar Exclusão" class="btn btn-danger fw-bold px-4" />
                @Html.ActionLink("⬅️ Cancelar", "Index", null, new { @class = "btn btn-secondary px-4 fw-bold" })
            </div>
        }
    </div>
</div>