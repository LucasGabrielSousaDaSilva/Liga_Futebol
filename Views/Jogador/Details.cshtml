@model Liga_Futebol.Models.Jogador

@{
    ViewBag.Title = "Detalhes do Jogador";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 p-4 bg-light">
        <h2 class="mb-4 text-primary">👤 Perfil do Jogador</h2>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>🛡️ Time:</strong>
                <p class="form-control-plaintext">@Model.Time.Nome</p>
            </div>
            <div class="col-md-6">
                <strong>🎽 Nome:</strong>
                <p class="form-control-plaintext">@Model.Nome</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>🎂 Data de Nascimento:</strong>
                <p class="form-control-plaintext">@Model.DataNascimento.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="col-md-6">
                <strong>🌍 Nacionalidade:</strong>
                <p class="form-control-plaintext">@Model.Nacionalidade</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>📍 Posição:</strong>
                <p class="form-control-plaintext">@Model.Posicao</p>
            </div>
            <div class="col-md-6">
                <strong>🔢 Camisa Nº:</strong>
                <p class="form-control-plaintext">@Model.NumCamisa</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>📏 Altura:</strong>
                <p class="form-control-plaintext">@Model.Altura.ToString("0.00") m</p>
            </div>
            <div class="col-md-6">
                <strong>⚖️ Peso:</strong>
                <p class="form-control-plaintext">@Model.Peso.ToString("0") kg</p>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <strong>🦶 Pé Preferido:</strong>
                <p class="form-control-plaintext">@Model.PePreferido</p>
            </div>
        </div>

        <div class="mt-4">
            @Html.ActionLink("✏️ Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning me-2" })
            @Html.ActionLink("⬅️ Voltar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
